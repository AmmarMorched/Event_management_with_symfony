    <table class="table"  class="table table-bordered table-hover">
      
        <tbody>
        
            <tr>
                {# <th>User Name</th>
                 <td>{{ report.idUser }}</td> 
            </tr> #}
            <tr>
                <th>ReportSubject</th>
                <td>{{ report.reportSubject }}</td>
            </tr>
            <tr>
                <th>ReportDescription</th>
                <td>{{ report.reportDescription }}</td>
            </tr>
            <tr>
                <th>Involvment</th>
                <td>{{ report.involvment }}</td>
            </tr>
            <tr>
                <th>IncidentType</th>
                <td>{{ report.incidentType }}</td>
            </tr>
            <tr>
                <th>IncidentDate</th>
                <td>{{ report.incidentDate ? report.incidentDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IncidentLocation</th>
                <td>{{ report.incidentLocation }}</td>
            </tr>
        </tbody>
    </table>
    </div>

    <div class="row">
        <div class="col-12">
          <a href="{{ path('app_reports_index',{'reportId': report.reportId}) }}" class="btn btn-secondary">Cancel</a>
          <a href="{{ path('app_reports_edit',{'reportId': report.reportId}) }}" class="btn btn-secondary float-right">Edit</a>
        
        </div>
