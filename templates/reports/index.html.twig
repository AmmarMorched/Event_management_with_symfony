{% extends 'basefront.html.twig' %}

{% block title %}Reports List{% endblock %}

{% block body %}
    <div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Reports</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">Home</a>
							</li>
							<li class="breadcrumb-item active">DataTables</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="row">
					<div class="col-14">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Reports Table</h3>
							</div>
							<!-- /.card-header -->
							<div class="card-body">
							


    <table class="table" class="table table-bordered table-hover">
        <thead>
            <tr>
                {# <th>ReportId</th>  #}
                <th>Report Subject</th>
                <th>Report Description</th>
                <th>Involvment</th>
                <th>Incident Type</th>
                <th>Incident Date</th>
                <th>Incident Location</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for report in reports %}
            <tr>
                {# <td>{{ report.reportId }}</td> #}
                <td>{{ report.reportSubject }}</td>
                <td>{{ report.reportDescription }}</td>
                <td>{{ report.involvment }}</td>
                <td>{{ report.incidentType }}</td>
                <td>{{ report.incidentDate ? report.incidentDate|date('Y-m-d') : '' }}</td>
                <td>{{ report.incidentLocation }}</td>
                
                <td>
                    <a href="{{ path('app_reports_show', {'reportId': report.reportId}) }}">show</a> 
                    {{ include('reports/_delete_form.html.twig') }}
					{# {{ include('reports/_delete_form.html.twig') }} #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

	<div class="row">
        <div class="col-12">
          <a href="{{ path('app_reports_new') }}">create new</a>
		  </div>
    </div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div>

    



