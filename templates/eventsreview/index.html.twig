		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="row">
					<div class="col-14">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Reviews Table</h3>
							</div>
							<!-- /.card-header -->
							<div class="card-body">

    <table class="table" class="table table-bordered table-hover">
        <thead>
            <tr>
                {# <th>ReviewId</th> #}
                <th>EventName</th>
                <th>ReviewTxt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for eventsreview in eventsreviews %}
            <tr>
                {# <td>{{ eventsreview.reviewId }}</td> #}
                <td>{{ eventsreview.event }}</td>
                <td>{{ eventsreview.reviewTxt }}</td>
                <td>
                    <a href="{{ path('app_eventsreview_show', {'reviewId': eventsreview.reviewId}) }}">show</a>
                    
					 {{ include('eventsreview/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div>

