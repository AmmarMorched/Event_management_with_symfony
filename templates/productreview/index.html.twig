{% extends 'base.html.twig' %}

{% block title %}Productreview index{% endblock %}

{% block body %}
    <h1>Productreview index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ReviewId</th>
                <th>ProductName</th>
                <th>Rating</th>
                <th>ReviewTxt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for productreview in productreviews %}
            <tr>
                <td>{{ productreview.reviewId }}</td>
                <td>{{ productreview.productName }}</td>
                <td>{{ productreview.rating }}</td>
                <td>{{ productreview.reviewTxt }}</td>
                <td>
                    <a href="{{ path('app_productreview_show', {'reviewId': productreview.reviewId}) }}">show</a>
                    <a href="{{ path('app_productreview_edit', {'reviewId': productreview.reviewId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_productreview_new') }}">Create new</a>
{% endblock %}
