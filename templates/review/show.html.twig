{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}
    <h1>Review</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ReviewId</th>
                <td>{{ review.reviewId }}</td>
            </tr>
            <tr>
                <th>PlaceName</th>
                <td>{{ review.placeName }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ review.rating }}</td>
            </tr>
            <tr>
                <th>ReviewTxt</th>
                <td>{{ review.reviewTxt }}</td>
            </tr>
            <tr>
                <th>ReviewDate</th>
                <td>{{ review.reviewDate ? review.reviewDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_review_index') }}">back to list</a>

    <a href="{{ path('app_review_edit', {'reviewId': review.reviewId}) }}">edit</a>

    {{ include('review/_delete_form.html.twig') }}
{% endblock %}
